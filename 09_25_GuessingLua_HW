local rand = math.random(1, 100)

local user_guess = 0

local user_continue = 'Y'

local counter = 0

while (user_continue ~= 'N') do
  print("Please guess a number 1-100.")
  user_guess = io.read()

    while counter ~= 7 and user_guess ~= rand do
      print("That is incorrect! please try again. You have" .. counter == counter+1 .. "number of tries left.")
    end 
  
  if user_guess ~= rand then
    print("You lost. The correct number was ".. rand.." Would you like to try again? Y/N")
    user_continue = string.upper(io.read())

  else 
    print("You won!Would you like to try again? Y/N")
    user_continue = string.upper(io.read())
  end
end

